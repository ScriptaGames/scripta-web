.game-list
  @media mq-mobile
    display: block
  display: flex
  justify-content: space-between
  flex-wrap: wrap
  margin: 10px 0 0
  padding: 0
  li
    padding: 0
    margin: 3px 0
    img
      @media mq-mobile
        max-width: 100%
        margin: 6px 0
    a
      margin: 0
      padding: 0
      color: black
      text-decoration: none
      figcaption
        font-size: 2rem
        font-weight: bold
